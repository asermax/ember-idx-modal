{{#if is-open}}
  <div class="modal-dialog">
    <div class="modal-content">
      {{#em-modal-title classes=modal-title-classes}}
        {{#em-modal-toggler class="close"}}
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        {{/em-modal-toggler}}
        <h4 class="modal-title">{{title}}</h4>
      {{/em-modal-title}}
      {{#em-modal-body}}
        {{message}}
        {{yield}}
        <!--Confirmation with a reason-->
        {{#if reasonModal}}
          {{view Ember.Select valueBinding="message" contentBinding="messages"
          optionValuePath="id" optionLabelPath="content.msg"}}
        {{/if}}
      {{/em-modal-body}}
      {{#em-modal-footer}}
        {{em-button class=submit-button-classes on-click='confirmPressed'
        default=submit-button-title icon-default=submit-button-default-icons
        icon-executing=submit-button-execute-icons
        executing=submit-button-submitting-title}}
        {{#em-modal-toggler class=cancel-button-classes}}
          {{#if cancel-button-icons}}
            <i class="{{cancel-button-icons}}"></i>
          {{/if}}
          {{cancel-button-title}}
        {{/em-modal-toggler}}
      {{/em-modal-footer}}
    </div>
  </div>
{{/if}}
